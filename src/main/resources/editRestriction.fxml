<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import pl.agh.cs.io.ExceededUsageAction?>
<?import pl.agh.cs.io.model.WindowState?>
<VBox prefHeight="187.0" prefWidth="413.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.agh.cs.io.controller.EditController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="230.0" prefWidth="414.0" VBox.vgrow="ALWAYS">
            <children>
                <Button layoutX="262.0" layoutY="141.0" mnemonicParsing="false" onAction="#applyChanges" text="Apply" />
                <TextField fx:id="permittedTime" layoutX="236.0" layoutY="14.0" />
                <Text layoutX="28.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Permitted number of seconds" />
                <Text layoutX="52.0" layoutY="69.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Action after passing time" />
                <ChoiceBox fx:id="action" layoutX="235.0" layoutY="51.0" prefWidth="150.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <ExceededUsageAction fx:value="NOTIFY" />
                            <ExceededUsageAction fx:value="CLOSE" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
                <Button fx:id="remove" layoutX="69.0" layoutY="141.0" mnemonicParsing="false" onAction="#removeRestriction" text="Remove restriction" />
            <Text layoutX="52.0" layoutY="109.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Type of restricted activity" />
            <ChoiceBox fx:id="state" layoutX="235.0" layoutY="91.0" prefWidth="150.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <WindowState fx:value="FOREGROUND" />
                     <WindowState fx:value="BACKGROUND" />
                  </FXCollections>
               </items>
            </ChoiceBox>
            <Text fx:id="errorInfo" layoutX="52.0" layoutY="200.0" strokeType="OUTSIDE" strokeWidth="0.0" />
            </children>
        </AnchorPane>
    </children>
</VBox>
