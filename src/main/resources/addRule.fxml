<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.agh.cs.io.controller.AddRuleController"
            prefHeight="150.0" prefWidth="400.0">

<!-- Add Header Label -->
<Label text="Type in the path to the exe below:" GridPane.columnIndex="0"
       GridPane.rowIndex="0" GridPane.columnSpan="2"
       GridPane.rowSpan="1" >
    <font>
        <Font name="Arial" size="24" ></Font>
    </font>
    <GridPane.margin>
        <Insets top="20" right="0" bottom="20" left="0"></Insets>
    </GridPane.margin>
</Label>



<!-- Add Name Label -->
<Label text="path : " GridPane.columnIndex="0"
       GridPane.rowIndex="1" >
</Label>
<!-- Add Name Text Field -->
<TextField fx:id="pathField" prefHeight="40"
           GridPane.columnIndex="1" GridPane.rowIndex="1"/>


<!-- Add Submit Button -->
<Button fx:id="submitButton" text="Submit"
        prefWidth="100" prefHeight="40" defaultButton="true"
        GridPane.columnIndex="0" GridPane.rowIndex="4"
        GridPane.columnSpan="2" GridPane.rowSpan="1"
        GridPane.halignment="CENTER"
        onAction="#handleSubmitButtonAction">
    <GridPane.margin>
        <Insets top="20" right="0" bottom="20" left="0"></Insets>
    </GridPane.margin>
</Button>
</GridPane>